---
const { title, description } = Astro.props;
import { Image } from "astro:assets";
import myImage from "../../../public/image/TS.png";
---

<div class="main-banner">
  <!--  -->
  <div class="container mx-auto rounded-2xl">
    <div class="text-topic text-center">
      <h4 class="text-36 text-1-line">{description}</h4>
      <h1 class="text-80 font-bold text-1-line">{title}</h1>
    </div>

    <div class="relative flex justify-end pt-2 opacity-50">
      <Image src={myImage} alt="ts" />
    </div>
  </div>
</div>
<style scoped>
  @import "../../styles/global.css";
  .main-banner {
    background-color: var(--accent-dark);
    padding-top: 5rem;
    padding-bottom: 1.5rem;
  }
  .container {
    background: rgb(191, 116, 8);
    background: linear-gradient(
      180deg,
      rgba(191, 116, 8, 1) 29%,
      rgba(248, 175, 35, 1) 100%
    );
    height: 246px;
  }
  .text-topic {
    content: "";
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 75%;
    padding-top: 0;
    z-index: 1;
  }

  /* Mobile styles */
  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    h4 {
      font-size: 28px;
    }
    h1 {
      font-size: 64px;
    }
  }

  @media only screen and (max-width: 767px) {
    img {
      padding-top: 2rem;
    }
    .text-topic {
      padding-top: 6rem;
      width: 100%;
    }
    h4 {
      font-size: 30px;
    }
    h1 {
      font-size: 66px;
    }
    .main-banner {
      padding-right: 1rem;
      padding-left: 1rem;
      width: 100%;
    }

  }
</style>
