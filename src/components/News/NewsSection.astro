---
import NewsFetchAPI from "./NewsFetchAPI.vue";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import type { loadApp } from "astro/app/node";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id="news" class="py-24 bg-a-yellow-FFF4DF">
  <div class="px-4 sm:px-16">
    <div class="container mx-auto">
      <div class="text-66 font-semibold mb-0">{`${t("home.news.title")}`}</div>
      <div class="sm:w-30 pt-0 md:pt-4">
        <div class="text-30">
          {`${t("home.news.description")}`}
        </div>
      </div>
      <NewsFetchAPI client:load />
    </div>
  </div>
</div>
