---
import Swiper from "../components/SlideShow/Swiper.vue"
import Image from "astro/components/Image.astro"
import standText from "../../public/image/TS.png";


const { title,description } = Astro.props;

---
<div  class="hero-layout">
    <Swiper client:visible />
	<div class="custom-bg">
    <div class="flex justify-between gap-4 pt-4 container mx-auto items-center topic-school is-desktop">
       <div>
          <h1 class="sm:text-64 md:text-66  lg:text-80  leading-none font-bold pr-0 lg:pr-64  uppercase t " set:html={title}></h1>
		  <h4 class="text-36 uppercase" set:html={description}></h4>
	   </div>
	   <div class="hidden lg:block">
		<Image src={standText} class="custom-img" alt="ts"/>
	   </div>
	</div>
	<div class="image-container is-mobile">
		<Image src={standText} class="custom-img opacity-50" alt="ts"/>
		<div class="overlay-text">
			<h1 class="sm:text-64 md:text-66  lg:text-80  leading-none font-bold pr-0 lg:pr-64  uppercase t " set:html={title}></h1>
			<h4 class="text-36 uppercase" set:html={description}></h4>
		</div>
	  </div>
</div>
</div>

<style scoped>

.custom-img {
  width: 100%;
  margin-top: 0.75rem;

}

.image-container {
  position: relative;
  display: inline-block; /* Ensures the container wraps around the image */
}

.overlay-text {
  position: absolute;
  top: 0; /* Adjust as needed */
  left: 0; /* Adjust as needed */
}

@media only screen and (max-width: 767px) {
  .is-desktop{
	display: none;
  }
  h1 {
	font-size: 60px;
	font-style: normal;
	font-weight: 700;
	line-height: 80%; /* 36.8px */
	padding-right: 5rem;
	padding-left: 1rem;
	padding-bottom: 0.5rem;
	padding-top: 1rem;
  }
  h4{
	font-size: 30px;
	padding-left: 1rem;
	padding-bottom: 3rem;
  }
  .hero-layout{
	padding-left: .5rem;
	padding-right: .5rem;
	padding-top: 2rem;
  }
  .swiper {
	min-height: 390px !important;
  }
  /* .custom-bg::before {
	content: "";
	background-image: "../../public/image/TS.png";
	background-color: red;
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 100%;
  } */
}
@media only screen and (min-width: 768px) and (max-width: 1023px) {
	.is-mobile {
	display: none;
   }
}
@media only screen and (min-width: 1024px) {
.is-mobile {
	display: none;
 }
}
</style>