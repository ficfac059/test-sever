---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollToTopButton from "../components/Button/ScrollToTopButton.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const { title, description } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead lang={lang} title={title} description={description} />
    <style scoped>
      @import "../styles/global.css";
    
      .news-layout {
        position: relative;
      }
      .bg-news {
        background: rgba(191, 116, 8, 1);
        background: linear-gradient(
          to bottom,
          rgba(191, 116, 8, 1),
          rgba(191, 116, 8, 0)
        );
        position: relative;
        border-radius: 30px;
      }
      .floatImage {
        position: absolute;
        right: 0;
        bottom: -1rem;
        width: auto;
        height: auto;
      }
      .card-top.wp-block-gallery {
        display: none !important;
      }
      .floatImage img {
        /* width: 75%; */
        max-width: none;
        margin-left: auto;
      }
    
      .main-image {
        border-radius: 45px;
        margin: 0 auto;
      }
      .news .card {
        color: var(--black);
        overflow: hidden;
      }

      .news .card .card-top {
        position: relative;
      }

      .news .card .card-top:before {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        background: linear-gradient(
          0deg,
          #0b0b0b 0%,
          rgba(11, 11, 11, 0) 92.86%
        );
        opacity: 1;
        transition: ease-in-out 0.3s;
      }

      .news .card:hover .card-top:before {
        opacity: 0;
      }

      .news .card .card-title {
        line-height: 2.5rem;
      }

      .news .card:hover .card-title {
        color: var(--accent-dark);
      }

      .news .card p {
        line-height: 1.2;
      }

      .load-button {
        padding: 0.5rem 3rem;
      }
     
    </style>
  </head>
  <body>
    <Header title={t("site.title")} lang={lang} />
    <main>
      <ScrollToTopButton />
      <slot />
    </main>
    <Footer lang={lang} />

    <script src="../scripts/local.js"></script>
  </body>
</html>
